<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="130dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:src="@drawable/instagramtext">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Phone number,email or username"
            android:padding="15dp"
            android:textColor="#A8A8A8"
            android:textColorHint="#7E7C7C"
            android:id="@+id/username"
            android:backgroundTint="#3C3C3C"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"

            android:textSize="17dp"
            android:textAlignment="textStart"

            android:background="@drawable/rectangle_box"
            android:gravity="start" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:padding="15dp"
            android:id="@+id/password"
            android:textColor="#A8A8A8"
            android:textColorHint="#7E7C7C"
            android:backgroundTint="#3C3C3C"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:inputType="textPassword"
            android:textSize="17dp"

            android:background="@drawable/rectangle_box"
            />



    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rect"
        android:text="Log In"
        android:id="@+id/btn_login"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.3"
            android:text="Forgot your login details?"
            android:textColor="#757575"
            android:gravity="end"
            android:textSize="13dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/btn_forgot_password"
            android:textStyle="bold"
            android:id="@+id/btn_reset_password"
            android:background="@null"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:textColor="@color/btn_login_register"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0.01dp"
            android:layout_weight="4"
            android:background="#CCC6C6"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:text="OR"
            android:gravity="center"
            android:textColor="#757575"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0.01dp"
            android:layout_weight="4"
            android:background="#CCC6C6"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/facebook_logo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Continue with facebook"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0.01dp"
            android:layout_weight="4"
            android:background="#CCC6C6"
            android:layout_gravity="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.4"
            android:text="Don't have an account?"
            android:textColor="#757575"
            android:gravity="end"
            android:layout_marginLeft="35dp"
            android:textSize="13dp"
            />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:layout_weight="5"
            android:id="@+id/btn_singup"
            android:background="@null"
            android:gravity="start"
            android:text="@string/btn_link_to_register"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/btn_register"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>




